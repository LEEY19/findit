<div class="programme-page">
  
<div class="youtube-player">
  <div>
    <span>
<!--     <iframe frameborder="0" allowfullscreen="1" title="YouTube video player" width="640" height="360" src="https://www.youtube.com/embed/?enablejsapi=1&amp;origin=http%3A%2F%2Fegg.network&amp;widgetid=3" id="undefined" class="undefined"></iframe> -->

      <div class="plyr" data-type="youtube" data-video-id="<%= @video.video_link %>"></div>      

    </span>
  </div>
  <div class="product-list-container egg-panel">
    <h3 style="display: inline-block;" class="panel-title">Buy What You See
    </h3>
    <div class="product-list">

      <% @products.each do |product| %>
        <div>
          <%= link_to videos_click_product_path(view_id: nil, product_id: product.id), method: 'post', target: "_blank" , class: "product-list-row" do %>
            <div class="product-thumbnail"><img class="product_picture" src="<%= product.picture %>"></div>
            <div class="product-details"><h3><%= product.title %></h3>
              <% if product.appeared_at != "0:00" %>
                <h6>Appeared at: <%= product.appeared_at %></h6>
              <% end %>
            <h6 style="display: none;">RM <%= product.price %></h6></div>
          <% end %>
        </div>
      <% end %>

      <div style="display: flex; align-items: center; justify-content: center;">
        <button type="button" class="btn seemore-btn">See More Products</button>        
      </div>

    </div>
  </div>
</div>


  <div class="video-list-container">
    <h3 class="panel-title">More Videos</h3>
    <div class="video-list">

      <% @all_other_video.each do |video| %>
        <div>
          <%= link_to show_manual_path(video.id), class: "video-list-row" do %>

            <div class="video-thumbnail"><img class="video_picture" src="<%= video.picture %>"><h6><%= video.duration %></h6></div>
            <div class="video-details"><h6><%= video.title %></h6></div>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>


</div>

<span id="scroll_counter" style="color: white;">0</span>
<span id="view_id" style="color: white;"></span>

