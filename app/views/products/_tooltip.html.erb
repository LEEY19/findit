<div class="product_details">
  <div class="product_thumbnail">
    <div style="background-image: url(<%= product.picture %>)" class="product_picture"></div>
  </div>
  <h4><%= product.title %></h4>
</div>
<div class="actions">
  <%= link_to "Buy Now", product.product_link, class: 'btn', target: '_blank' %>
  <%= link_to "Want an exact match?", exact_match_product_path(product), class: 'btn', remote: true %>
</div>
